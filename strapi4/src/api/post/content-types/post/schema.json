{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "title": {
      "type": "string"
    },
    "body": {
      "type": "richtext"
    },
    "animals": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::animal.animal",
      "inversedBy": "posts"
    },
    "facilities": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::facility.facility",
      "inversedBy": "posts"
    },
    "photos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::photo.photo",
      "mappedBy": "post"
    }
  }
}
