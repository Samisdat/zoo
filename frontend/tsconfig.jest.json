{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "types": ["jest", "node"],
    "noEmit": true,
    "strict": true
  },
  "include": [
    "pages/*.ts",
    "components/*.ts",
    "helper/*.ts",
    "data-repos/*.ts"
  ],
  "exclude": [
    "cypress/**/*"
  ]
}